        </div>
      {{/each}}
    </div>
    <div class="voice-channel-category">
      <span>ðŸŽ¤ &nbsp; -- &nbsp; VOICE CHANNELS</span>
      {{#each voicechannels}}
        <div class="voice-channel">
          <a href="#" onclick="changevc('{{{this.id}}}')">{{{this.name}}}</a>
        </div>
      {{/each}}
    </div>
  </div>
  <div id="soundboard">
    {{#each soundlist}}
      <div class="soundbutton">
        <img src='/img/soundboard/{{{id this}}}.jpg' class="button" onclick="play('{{{id this}}}')" />
      </div>
    {{/each}}
  </div>
  <div id="people-list"><h2>WORK <br /> IN <br /> PROGRESS</h2></div>
</div>
