<div class="container">
  <div id="topbar">
    <div id="server-name">
       <span>
         {{servers.0.name}}
       </span>
     </div>
    <div id="top-etc">
      <span>
        Send nudes
      </span>
    </div>
  </div>

  <div id="server-list">
    <div id="server-separator">
      <a href="#"></a>
    </div>
    {{#each servers}}
    <div class="guild-container">
      <div class="guild">
        {{{serverAvatar this}}}
      </div>
    </div>
    {{/each}}
  </div>
  <div id="sidebar">
    <div class="text-channel-category">
      <span>âŒ¨ &nbsp; -- &nbsp; TEXT CHANNELS</span>
      {{#each textchannels}}
